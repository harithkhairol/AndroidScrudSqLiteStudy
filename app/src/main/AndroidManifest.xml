<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.harithproperties.androidcrudstudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SearchSQLiteActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UpdateRecord"
            android:label="Update Exercise" >
        </activity>
        <activity
            android:name=".AddNewRecord"
            android:label="Add New Exercise" >
        </activity>

        <activity
            android:name=".ShowSingleRecordActivity"
            android:label="Edit Exercise "
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
        </activity>

    </application>

</manifest>